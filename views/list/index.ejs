<% layout('./layout/boilerplate') -%>
<style>

 .filter{margin-right: 3rem;
    text-align: center;
    margin-top: 1rem;
  opacity: 0.7;}
  .filter-check{border: 1px solid black;
  border-radius: 1rem;
height: 3.5rem;
padding: 1rem;
margin-top: 0.5rem;
display: flex;
align-items: center;
