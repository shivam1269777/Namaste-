</style>
<body>
  <nav class="navbar navbar-expand-sm shrink ">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <div class="filter ">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Tranding</p>
    </div>
        </li>
        <li class="nav-item">
          <div class="filter ">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
        </li>
        <li class="nav-item">
          <div class="filter ">
          <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic City</p>
      </div>
        </li>
        <li class="nav-item">
          <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountain</p>
      </div>
        </li>
        <li class="nav-item">
          <div class="filter">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castle</p>
      </div>
        </li>
        <li class="nav-item">
           <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pool</p>
      </div>
        </li>
        <li class="nav-item">
          <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
      </div>
        </li>
        <li class="nav-item"><div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Artic</p>
      </div></li>
        <li class="nav-item"><div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
      </div>
    </li>
    <div class="filter-check">
      <li class="nav-item"><div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
  <label class="form-check-label" for="flexSwitchCheckDefault">Default included Tax</label>
</div>
</div>
</li>
      </ul>
    </div>
  </div>
</nav>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-2">
     <%for(let i of data) {%>
      <a href="/lists/<%= i.id %> " class="list-link"><div class="card list-all" >
  <img src="<%=i.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
   <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text"><b><%= i.title %></b>
    <br>
  
  &#8377;<%=i.price.toLocaleString('en-In')%>/night
  <i class="gst">&nbsp;&nbsp;+18%gst</i>
  </p>
  </div>
</div>
<% }  %></a>
  </div>
  <script>
    let txtswitch=document.getElementById("flexSwitchCheckDefault");
    txtswitch.addEventListener("click",()=>{
      let info=document.getElementsByClassName("gst");
      for(inf of info)
    {if(inf.style.display!="inline")
    {inf.style.display="inline";}
else{inf.style.display="none";}
    }
    })
  </script>
  
</body>
 


    
     

