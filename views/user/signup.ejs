<% layout('./layout/boilerplate') -%>
<div class="row mt-3" >
    <div class="col-6 offset-3">
        <div col-6 offset-3>
<h1>Signup</h1>
        </div>
        <form action="/signup" method="post" novalidate class="needs-validation">
            <label for="username" class="form-label">Username</label>
<input name="username" type="text" id="username" class="form-control" required/>
<div class="valid-feedback">
      You are doing good
    </div>
    <form action="/signup" method="post" novalidate class="needs-validation">
            <label for="email_id" class="form-label">Email</label>
<input name="email_id" type="text" id="email_id" class="form-control" required/>
<div class="invalid-feedback">
      Give right email
    </div>
    <form action="/signup" method="post" novalidate class="needs-validation">
            <label for="password" class="form-label">Password</label>
<input name="password" type="text" id="password" class="form-control" required/>
<div class="invalid-feedback">
      Enter right Password
    </div>
    <br>
    <button class="btn btn-success">submit</button>
        </form>
    </div>
</div>